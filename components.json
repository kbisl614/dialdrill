{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "new-york",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "baseColor": "zinc",
    "cssVariables": true
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "lib": "@/lib",
    "hooks": "@/hooks"
  },
  "registries": [
    {
      "name": "default",
      "url": "https://ui.shadcn.com"
    },
    {
      "name": "@react-bits",
      "url": "https://shadcnregistry.com/react-bits/{name}.json"
    }
  ]
}

